public class Solution {

	public static int countWords(String str) {	
		//Your code goes here
        int count =0;
        if(str.length()==0){
            return 0;
        }
        
      
        for( int i=0 ; i<str.length(); i++){
            
            if( str.charAt(i)==32){
               count+=1;
            }
        }
        return count+1;
        
	}
    

}
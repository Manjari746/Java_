public class solution {
	public static void print2DArray(int input[][]) {
		// Write your code here
 int row= input.length;
        int n=row-1;
        int col= input[0].length;
        
        for( int i=0; i<row; i++){
            n-=i;
            while(n>=0){
                for( int j=0; j<col;j++){
                    System.out.print(input[i][j]+" ");
                } 
                 System.out.println();
                n--;
            }
            n=row-1;
          
        }
	}
}